/* post */
.post-intro 
  margin-bottom 30px
.post-title 
  text-align center
  font-size 2.15em
  margin-bottom 20px
  font-family Gothic
.post-cover 
  margin-top 80px
.post-cover-img 
  min-width 100%
  max-width: 100%
  height 350px
  object-fit cover
/* post-meta */
.post-meta 
  display flex
  align-items center
.meta-avator 
  img 
    width 45px
    height 45px
    border-radius 100%
.meta-author 
  margin-left 15px
  margin-right auto
  font-size 1.1em
.meta-intro 
  font-size .8em
  text-transform : uppercase
  letter-spacing: 1.5px
  text-align center
  font-family Gothic
  color $color-text-secondary
  line-height: 4
  position: relative
  &:after 
      content ""
      position absolute
      top 0
      left 48%
      right 48%
      bottom 98%
      transition all .3s
      background-color $color-theme-main
.post-content-outer 
  margin-top 50px
  display flex
  justify-content center
  flex-direction: column
.post-content-inner 
  margin-bottom 20px
  letter-spacing: .7px
  line-height 2
  h2,h3,h4,h5,h6
    margin 15px 0px
    color: $color-text-main
    font-weight normal
    font-family Gothic
  h2 
    font-size 1.65em
    margin 30px 0px
    &::after 
      content "#"
      font-family: Merriweather
      display inline-block
      color #E3E3E3
      margin-left 0.5rem
      font-weight: 1000
  h3 
    font-size 1.25em
    display: inline-block
    box-shadow: inset 0 -1rem 0 #E3E3E3
  h4 
    font-size 1.15em
  h5 
    font-size 1em
  h6 
    font-size 1em
  blockquote 
    border-left 4.2px solid #E3E3E3
    padding-left 17px
    color $color-text-secondary
    font-size 0.9em
    & > p 
      margin-top 10px
      margin-bottom 10px
      line-height 1.65
  a 
    color $color-theme-main
    &:hover 
      text-decoration underline
  img 
    width auto
    max-width 100%
    margin 10px auto
    display block
 strong 
    color $color-theme-main
    display inline-block
  hr 
    margin-top 30px
    margin-bottom 30px
    height 3px
    border none
    background-color #e3e3e3
  pre 
    margin-top 10px
    margin-bottom 10px
    line-height 1.6



