/* 代码高亮 */
pre 
  .hljs 
    border-radius 2px
code,kbd,pre,samp 
  font-size .8em
  font-weight normal
  font-family hack-regular
.hljs 
  font-family hack-regular
  overflow scroll
  font-size 1em
  span 
    font-family hack-regular
.hljs,code 
  font-weight normal
/* 小代码段 */
code 
  font-size 0.8em
  font-weight 1000
  background-color #F8F8F8
  color $color-text-main
  padding 4px 6px
  margin 0px 4px
  font-family hack-regular,hack-italic,hack-bold,hack-bolditalic
/* toc */
/* 位于文章上方的toc */
.toc-top 
  border 1px solid #e3e3e3
  border-radius 2px
  padding 10px 20px
  list-style none
  counter-reset: li
  margin-bottom 20px
  li
    line-height: 1.2
    margin: 7px 0px
    counter-increment: li
    a
      color $color-text-secondary
      font-size: .8em
    &::before
      content: counter(li)
      font-size: .8em
      font-family: Merriweather
      color: $color-text-secondary
      margin-right: 0.5em
      text-align: right
      transition: all .3s
    &:hover
      a
        text-decoration: none

