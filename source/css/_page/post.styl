/* 列表 */
.post-content-inner ul,ol 
  padding-left 22px
  margin 7px 0px


.post-content-inner
  ol
    list-style: none
    counter-reset: li
    li
      line-height: 1.7
      margin: 6px 0px
      counter-increment: li
      &::before
        content: counter(li)
        font-family: Merriweather
        color: $color-text-main
        margin-right: 0.7em
        text-align: right

.post-content-inner
  ul
    list-style: none
    li
      line-height: 1.2
      margin: 6px 0px
      &::before
        content: "◆"
        font-size: .8em
        font-family: Merriweather
        color: $color-text-secondary
        margin-right: 0.7em
        text-align: right


